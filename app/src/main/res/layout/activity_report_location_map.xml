<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.ReportLocationMap">


    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        map:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:cameraZoom="14"
        android:layout_below="@id/autocomplete_fragment"
        map:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
        />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/CurrLocation"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Location"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="@color/green1"
            />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_toEndOf="@+id/CurrLocation"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toRightOf="@id/CurrLocation"
            map:layout_constraintRight_toLeftOf="@id/confirm_button"
            android:backgroundTint="@color/green1"
            />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_toEndOf="@+id/reset_button"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toRightOf="@id/reset_button"
            android:backgroundTint="@color/green1"
            map:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_ios_24"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
        tools:ignore="SpeakableTextPresentCheck" />
        -->
</androidx.constraintlayout.widget.ConstraintLayout>