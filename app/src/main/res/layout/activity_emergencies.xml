<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Emergencies"
    android:padding="50dp"
    >

    <ImageView
        android:id="@+id/alert"
        android:layout_width="275dp"
        android:layout_height="229dp"
        android:contentDescription="Danger"
        android:src="@drawable/dangersign"
        app:layout_constraintBottom_toTopOf="@id/btn_kidnapping"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_kidnapping"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        android:text="kidnapping"
        android:textColor="@color/light_blue1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/alert"
        app:layout_constraintBottom_toTopOf="@id/btn_harrasment"
        android:backgroundTint="@color/light_grey1"
        app:icon="@drawable/hostage"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:iconTint="@color/light_blue1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_harrasment"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        android:text="harassment"
        android:textColor="@color/light_blue1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_kidnapping"
        app:layout_constraintBottom_toTopOf="@id/btn_fire"
        android:backgroundTint="@color/light_grey1"
        app:icon="@drawable/harassment"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:iconTint="@color/light_blue1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_fire"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        android:textSize="20sp"
        android:text="fire"
        android:textColor="@color/light_blue1"
        app:layout_constraintTop_toBottomOf="@id/btn_harrasment"
        app:layout_constraintBottom_toTopOf="@id/btn_carFault"
        android:backgroundTint="@color/light_grey1"
        app:icon="@drawable/fire"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:iconTint="@color/light_blue1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_carFault"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        android:text="car fault"
        android:textColor="@color/light_blue1"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_fire"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/light_grey1"
        app:icon="@drawable/carfault"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:iconTint="@color/light_blue1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>