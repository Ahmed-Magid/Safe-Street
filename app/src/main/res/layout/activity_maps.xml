<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.MapsActivity">


    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        map:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:cameraZoom="14"
        android:layout_below="@id/autocomplete_fragment"
        map:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
        />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/CurrLocation"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Location"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="@color/green1"
            />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_toEndOf="@+id/CurrLocation"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toRightOf="@id/CurrLocation"
            android:layout_marginStart="5dp"
            map:layout_constraintRight_toLeftOf="@id/confirm_button"
            android:backgroundTint="@color/green1"
            />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_toEndOf="@+id/reset_button"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toRightOf="@id/reset_button"
            android:backgroundTint="@color/green1"
            map:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/textview_bg"
            android:text="Time: "
            android:textColor="@color/white"
            map:layout_constraintBottom_toTopOf="@id/walk_button"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"

            />
        <Button
            android:id="@+id/walk_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="walking"
            map:layout_constraintBottom_toTopOf="@id/CurrLocation"
            map:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/green1"
            />
        <Button
            android:id="@+id/driving_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Driving"
            android:layout_toEndOf="@id/walk_button"
            map:layout_constraintLeft_toRightOf="@id/walk_button"
            map:layout_constraintBottom_toTopOf="@id/reset_button"
            map:layout_constraintRight_toLeftOf="@id/mode"
            android:backgroundTint="@color/green1"
            />

        <Button
            android:id="@+id/mode"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="D"
            android:layout_toEndOf="@id/driving_button"
            map:layout_constraintRight_toRightOf="parent"
            map:layout_constraintBottom_toTopOf="@id/confirm_button"
            map:layout_constraintLeft_toRightOf="@id/driving_button"
            android:backgroundTint="@color/green1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>